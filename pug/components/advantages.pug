		{
			title: 'Высокий потолок',
			icon: 'ceil'
		},
		{
			title: 'доброжелательный персонал',
			icon: 'personal'
		},
		{
			title: 'даем допинвентарь',
			icon: 'inventory'
		},
		{
			title: 'раздевалка открывается за час',
			icon: 'dry'
		},
		{
			title: 'Парковка рядом',
			icon: 'parking'
		},
		{
			title: 'зона спа, сауна',
