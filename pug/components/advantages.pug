section.advantages
	.advantages__wrapper
		h2.advantages__title.title наши преимущества
		.advantages__cards
			each item in advantagesItems
				.advantages__item
					.advantages__item-title= item.title
					.advantages__item-icon
						svg.advantages__item-svg
							use(xlink:href= `@svg/${item.icon}`)
